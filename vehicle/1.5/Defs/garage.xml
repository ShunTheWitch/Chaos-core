<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <JobDef>
    <defName>GW_OpenGarageDoor</defName>
    <driverClass>Vehicles_of_Grimworld.JobDriver_OpenGarage</driverClass>
    <reportString>opening garage door.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  
  <JobDef>
    <defName>GW_CloseGarageDoor</defName>
    <driverClass>Vehicles_of_Grimworld.JobDriver_CloseGarage</driverClass>
    <reportString>closing garage door.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <DesignationDef>
    <defName>GW_OpenGarageDoorRequest</defName>
    <targetType>Thing</targetType>
    <texturePath>Things/Building/GarageDoors/GW_GarageDoor_Open</texturePath>
    <designateCancelable>false</designateCancelable>
  </DesignationDef>
  
  <DesignationDef>
    <defName>GW_CloseGarageDoorRequest</defName>
    <targetType>Thing</targetType>
    <texturePath>Things/Building/GarageDoors/GW_GarageDoor_Close</texturePath>
    <designateCancelable>false</designateCancelable>
  </DesignationDef>
</Defs>